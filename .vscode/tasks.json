{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run",
      "type": "shell",
      "command": "make run",
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "options": { "cwd": "${fileDirname}" }
    },
    {
      "label": "Build c++",
      "dependsOn": ["Run", "Clean"],
      "dependsOrder": "sequence",
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}